@model IEnumerable<PracticeProject.Models.Hostel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Emptyseats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totalseats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            var profileSrc = string.IsNullOrEmpty(item.ProfileImagePath)
            ? "/images/person.jpg"
            : item.ProfileImagePath;
        <tr>
            <td><img src="@profileSrc" height="40px"></td>
            <td>

                @Html.DisplayFor(modelItem => item.Emptyseats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totalseats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
